{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cargo +nightly fmt"
          },
          {
            "type": "command",
            "command": "cargo +nightly clippy --fix --allow-dirty"
          }
        ]
      }
    ]
  }
}
